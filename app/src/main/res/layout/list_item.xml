<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/icon_sms_not_send"
            android:src="@drawable/ic_announcement_red_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:padding="2dp"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="2"
            android:paddingLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mobileNoTextView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:text="mobileNo"
                android:textColor="#1D1D1E"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="user name"
                android:textColor="#9E9EA2"
                android:textAppearance="?android:attr/textAppearanceSmall"                />
        </LinearLayout>

        <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="today"
            android:textColor="#A2A3A8"
            android:textAppearance="?android:attr/buttonStyleSmall"></TextView>


    </LinearLayout>

</LinearLayout>