<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="2">


    <ImageView
        android:id="@+id/icon_sms_not_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_weight="0.5"
        android:paddingTop="12dp"
        android:src="@drawable/ic_announcement_red_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/mobileNoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="mobileNo"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="#1D1D1E"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="user name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#9E9EA2" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_weight="0.5"
        android:paddingTop="12dp"
        android:text="Yesterday"
        android:textAppearance="?android:attr/buttonStyleSmall"
        android:textColor="#A2A3A8"></TextView>



</LinearLayout>